<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/activity_horizontal_margin"
    android:layout_marginTop="@dimen/dp_8"
    android:layout_marginEnd="@dimen/activity_horizontal_margin"
    android:layout_marginBottom="@dimen/dp_8"
    app:cardElevation="@dimen/dp_2"
    app:contentPadding="@dimen/activity_vertical_margin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1">

        <TextView
            android:id="@+id/name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dp_8"
            android:layout_weight="1"
            android:fontFamily="@font/roboto_regular"
            android:textColor="@color/black_80"
            android:textSize="@dimen/text_17" />

        <TextView
            android:id="@+id/download_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="@drawable/blue_style_no_padding"
            android:drawableEnd="@drawable/ic_download_small"
            android:drawablePadding="@dimen/dp_4"
            android:fontFamily="@font/roboto_regular"
            android:padding="@dimen/dp_4"
            android:text="@string/label_download"
            android:textColor="@color/white"
            android:visibility="gone" />

    </LinearLayout>
</androidx.cardview.widget.CardView>