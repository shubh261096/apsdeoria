<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        tools:ignore="MissingConstraints">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar_timetable"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/white"
            app:layout_scrollFlags="scroll|enterAlways"
            app:navigationIcon="@drawable/ic_arrow_back"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            app:title="@string/toolbar_timetable"
            app:titleTextColor="@color/colorPrimary" />

    </android.support.design.widget.AppBarLayout>


    <TextView
        android:drawableEnd="@drawable/ic_spinner_down"
        android:drawableTint="@color/lightPrimary"
        android:padding="@dimen/padding_14"
        android:id="@+id/spinner_day"
        android:textSize="@dimen/text_14"
        android:textColor="@color/lightPrimary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/spinner_style"
        android:layout_margin="@dimen/activity_horizontal_margin"
        tools:ignore="UnusedAttribute" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_top_2"
        android:layerType="software"
        android:src="@drawable/dotted_line"
        tools:ignore="ContentDescription" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rvTimetable"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/margin_top_10"
        app:layout_behavior="@string/appbar_scrolling_view_behavior" />

</LinearLayout>