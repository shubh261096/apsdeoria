<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/activity_horizontal_margin"
    android:layout_marginTop="@dimen/dp_8"
    android:layout_marginEnd="@dimen/activity_horizontal_margin"
    android:layout_marginBottom="@dimen/dp_8"
    app:cardElevation="@dimen/dp_2"
    app:contentPadding="@dimen/dp_10">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/subject_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/activity_horizontal_margin"
            android:fontFamily="@font/roboto_regular"
            android:gravity="start|center_vertical"
            android:textColor="@color/black_80"
            android:textSize="@dimen/text_18"
            app:layout_constraintBottom_toTopOf="@id/view_syllabus"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_chainStyle="packed" />

        <TextView
            android:id="@+id/view_syllabus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_gravity="end|center"
            android:layout_marginTop="@dimen/dp_8"
            android:background="@drawable/blue_style_no_padding"
            android:drawableEnd="@drawable/ic_view"
            android:drawablePadding="@dimen/dp_4"
            android:fontFamily="@font/roboto_regular"
            android:padding="@dimen/dp_4"
            android:text="@string/label_view"
            android:textColor="@color/white"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/subject_name" />

        <TextView
            android:id="@+id/upload_syllabus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_gravity="end|center"
            android:layout_marginTop="@dimen/dp_8"
            android:background="@drawable/blue_style_no_padding"
            android:drawableEnd="@drawable/ic_upload_small"
            android:drawablePadding="@dimen/dp_4"
            android:fontFamily="@font/roboto_regular"
            android:padding="@dimen/dp_4"
            android:text="@string/label_upload"
            android:textColor="@color/white"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/subject_name" />

        <TextView
            android:id="@+id/download_syllabus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_gravity="end|center"
            android:layout_marginTop="@dimen/dp_8"
            android:background="@drawable/blue_style_no_padding"
            android:drawableEnd="@drawable/ic_download_small"
            android:drawablePadding="@dimen/dp_4"
            android:fontFamily="@font/roboto_regular"
            android:padding="@dimen/dp_4"
            android:text="@string/label_download"
            android:textColor="@color/white"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/subject_name" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>