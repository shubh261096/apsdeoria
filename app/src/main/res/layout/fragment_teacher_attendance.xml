<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/dynamic_fragment_frame_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:clickable="true"
            android:focusable="true"
            android:orientation="vertical">

            <android.support.design.widget.AppBarLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
                tools:ignore="MissingConstraints">

                <android.support.v7.widget.Toolbar
                    android:id="@+id/toolbar_attendance"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    android:background="@color/white"
                    app:layout_scrollFlags="scroll|enterAlways"
                    app:navigationIcon="@drawable/ic_arrow_back"
                    app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
                    app:title="@string/toolbar_attendance"
                    app:titleTextColor="@color/colorPrimary" />

            </android.support.design.widget.AppBarLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/activity_horizontal_margin"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvClass"
                    android:layout_width="wrap_content"
                    android:layout_height="?attr/dropdownListPreferredItemHeight"
                    android:layout_gravity="end"
                    android:layout_marginEnd="@dimen/dp_16"
                    android:layout_weight="0.8"
                    android:background="@drawable/spinner_bg"
                    android:drawableEnd="@drawable/ic_angle_arrow_down"
                    android:drawableTint="@color/white"
                    android:foreground="?selectableItemBackgroundBorderless"
                    android:gravity="start|center_vertical"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_16"
                    android:visibility="visible"
                    tools:ignore="PrivateResource,RtlSymmetry,UnusedAttribute" />


                <TextView
                    android:id="@+id/date_filter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end|center_vertical"
                    android:layout_weight="0.2"
                    android:background="@drawable/corner_style"
                    android:drawableStart="@drawable/ic_clock"
                    android:foreground="?selectableItemBackgroundBorderless"
                    android:gravity="center"
                    android:textAllCaps="false"
                    android:textColor="@color/lightPrimary"
                    android:visibility="visible"
                    tools:ignore="RtlSymmetry,UnusedAttribute" />
            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_2"
                android:layerType="software"
                android:src="@drawable/dotted_line"
                tools:ignore="ContentDescription" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rvAttendance"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="@dimen/dp_70"
                    app:layout_behavior="@string/appbar_scrolling_view_behavior" />


                <LinearLayout
                    android:id="@+id/llAttendance"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:background="@color/white"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="@string/text_edit_attendance"
                        android:textColor="@color/black_80"
                        android:textSize="@dimen/text_16" />

                    <TextView
                        android:id="@+id/edit_attendance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_margin="@dimen/activity_horizontal_margin"
                        android:gravity="center"
                        android:text="@string/edit_attendance"
                        android:textColor="@color/colorPrimary_70"
                        android:textSize="@dimen/text_14" />

                </LinearLayout>
            </FrameLayout>
        </LinearLayout>

        <Button
            android:id="@+id/submit_attendance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_margin="@dimen/activity_horizontal_margin"
            android:background="@drawable/corner_style"
            android:text="@string/submit_attendance"
            android:textColor="@color/lightPrimary"
            android:visibility="gone" />

        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="gone" />
    </FrameLayout>
</android.support.design.widget.CoordinatorLayout>