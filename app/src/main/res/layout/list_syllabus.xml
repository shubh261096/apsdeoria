<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/activity_horizontal_margin"
    android:layout_marginTop="@dimen/dp_8"
    android:layout_marginEnd="@dimen/activity_horizontal_margin"
    android:layout_marginBottom="@dimen/dp_8"
    app:cardElevation="@dimen/dp_2"
    app:contentPadding="@dimen/activity_horizontal_margin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/subject_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_toStartOf="@+id/download_syllabus"
                android:fontFamily="@font/roboto_regular"
                android:text="@string/submit"
                android:textColor="@color/colorPrimary_70"
                android:textSize="@dimen/text_17" />

            <ImageView
                android:id="@+id/download_syllabus"
                android:layout_width="@dimen/dp_16"
                android:layout_height="@dimen/dp_16"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:foreground="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/ic_download"
                android:visibility="gone"
                tools:ignore="ContentDescription,UnusedAttribute" />
        </RelativeLayout>

        <TextView
            android:id="@+id/subject_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_regular"
            android:textColor="@color/black_80"
            android:textSize="@dimen/text_15" />

        <TextView
            android:id="@+id/view_syllabus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/dp_8"
            android:fontFamily="@font/roboto_regular"
            android:text="@string/view_syllabus"
            android:textColor="@color/colorPrimary_70"
            android:textSize="@dimen/text_13"
            android:visibility="visible" />
    </LinearLayout>
</android.support.v7.widget.CardView>