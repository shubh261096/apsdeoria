<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/activity_horizontal_margin"
    android:layout_marginTop="@dimen/dp_8"
    android:layout_marginEnd="@dimen/activity_horizontal_margin"
    android:layout_marginBottom="@dimen/dp_8"
    app:cardElevation="@dimen/dp_2"
    app:contentPadding="@dimen/activity_horizontal_margin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/subject_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_regular"
            android:textColor="@color/colorPrimary_70"
            android:textSize="@dimen/text_17" />

        <TextView
            android:id="@+id/subject_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_regular"
            android:textColor="@color/black_80"
            android:textSize="@dimen/text_15" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_8">

            <TextView
                android:id="@+id/view_syllabus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:background="@drawable/blue_style_no_padding"
                android:drawableEnd="@drawable/ic_view"
                android:drawablePadding="@dimen/dp_4"
                android:fontFamily="@font/roboto_regular"
                android:padding="@dimen/dp_4"
                android:text="@string/label_view"
                android:textColor="@color/white"
                android:visibility="gone" />

            <TextView
                android:id="@+id/download_syllabus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:background="@drawable/blue_style_no_padding"
                android:drawableEnd="@drawable/ic_download_small"
                android:drawablePadding="@dimen/dp_4"
                android:fontFamily="@font/roboto_regular"
                android:padding="@dimen/dp_4"
                android:text="@string/label_download"
                android:textColor="@color/white"
                android:visibility="gone"
                tools:ignore="RelativeOverlap" />
        </RelativeLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>